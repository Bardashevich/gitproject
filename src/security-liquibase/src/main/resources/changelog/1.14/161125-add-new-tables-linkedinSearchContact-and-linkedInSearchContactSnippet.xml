<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="01" author="pavel.urban">
        <createTable tableName="linkedin_search_contact">
            <column autoIncrement="true" name="id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="linkedin_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(50)"/>
            <column name="last_name" type="VARCHAR(50)"/>
            <column name="position" type="VARCHAR(255)"/>
            <column name="location" type="VARCHAR(50)"/>
            <column name="industry" type="VARCHAR(255)"/>
            <column name="image_uri" type="VARCHAR(300)"/>
            <column name="profile_uri" type="VARCHAR(1000)"/>
        </createTable>
        <createTable tableName="linkedin_search_contact_snippet">
            <column autoIncrement="true" name="id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="linkedin_search_contact_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="field_name" type="VARCHAR(30)"/>
            <column name="heading" type="VARCHAR(255)"/>
            <column name="body" type="VARCHAR(1000)"/>
        </createTable>
        <!--auto rollback-->
    </changeSet>

    <changeSet id="02" author="pavel.urban">
        <addForeignKeyConstraint baseColumnNames="linkedin_search_contact_id" baseTableName="linkedin_search_contact_snippet"
                                 referencedColumnNames="id" referencedTableName="linkedin_search_contact"
                                 constraintName="fk_linkedin_search_contact_snippet_linkedin_search_contact_id"
                                 deferrable="false" initiallyDeferred="false" onDelete="NO ACTION"
                                 onUpdate="NO ACTION"/>
        <!--auto rollback-->
    </changeSet>
</databaseChangeLog>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="01" author="pavel.urban">
        <addColumn tableName="recruitment_opportunity">
            <column name="status_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <!--auto rollback-->
    </changeSet>
    <changeSet id="02" author="pavel.urban">
        <sql dbms="mysql">
            SET SQL_SAFE_UPDATES=0;
            update recruitment_opportunity set status_date = sysdate();
            SET SQL_SAFE_UPDATES=1;
        </sql>
    </changeSet>
</databaseChangeLog>
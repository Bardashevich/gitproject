<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="artsiom.marenau" id="001">
        <createTable tableName="contact_language">
            <column autoIncrement="true" name="id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="contact_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="ENUM('ENGLISH','DEUTSCH', 'RUSSIAN', 'SPANISH', 'FRENCH')"/>
            <column name="level" type="ENUM('BEGINNER','ELEMENTARY','PRE_INTERMEDIATE','INTERMEDIATE','UPPER_INTERMEDIATE','ADVANCED','PROFICIENCY')"/>
        </createTable>
        <rollback>
            <dropTable tableName="contact_language"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
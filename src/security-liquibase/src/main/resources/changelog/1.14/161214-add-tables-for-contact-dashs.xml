                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="01" author="artsiom.marenau">
        <dropTable tableName="dashboard"/>
        <!--auto rollback-->
    </changeSet>
    <changeSet id="02" author="artsiom.marenau">
        <createTable tableName="dash_item">
            <column autoIncrement="true" name="id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="dashboard">
            <column autoIncrement="true" name="id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="role" type="ENUM('HR', 'ADMIN', 'MANAGER', 'OTHER')">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="dash_item_def_place">
            <column autoIncrement="true" name="id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="dash_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="item_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="col" type="INT(2)">
                <constraints nullable="false"/>
            </column>
            <column name="row" type="INT(2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="contact_dash">
            <column autoIncrement="true" name="id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="contact_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="dash_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="contact_dash_prop">
            <column autoIncrement="true" name="id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="contact_dash_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="dash_item_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="col" type="INT(2)">
                <constraints nullable="false"/>
            </column>
            <column name="row" type="INT(2)">
                <constraints nullable="false"/>
            </column>
            <column name="visible" type="BIT(1)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="item_id"
                                 baseTableName="dash_item_def_place"
                                 referencedColumnNames="id"
                                 referencedTableName="dash_item"
                                 constraintName="fk_item_id_dash_item_def_place"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"/>

        <addForeignKeyConstraint baseColumnNames="dash_id"
                                 baseTableName="dash_item_def_place"
                                 referencedColumnNames="id"
                                 referencedTableName="dashboard"
                                 constraintName="fk_dash_id_dash_item_def_place"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"/>

        <addForeignKeyConstraint baseColumnNames="contact_id"
                                 baseTableName="contact_dash"
                                 referencedColumnNames="id"
                                 referencedTableName="contact"
                                 constraintName="fk_contact_id_contact_dash"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"/>

        <addForeignKeyConstraint baseColumnNames="dash_id"
                                 baseTableName="contact_dash"
                                 referencedColumnNames="id"
                                 referencedTableName="dashboard"
                                 constraintName="fk_dash_id_dashboard"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"/>

        <addForeignKeyConstraint baseColumnNames="contact_dash_id"
                                 baseTableName="contact_dash_prop"
                                 referencedColumnNames="id"
                                 referencedTableName="dashboard"
                                 constraintName="fk_contact_dash_id_contact_dash_prop"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"/>

        <addForeignKeyConstraint baseColumnNames="dash_item_id"
                                 baseTableName="contact_dash_prop"
                                 referencedColumnNames="id"
                                 referencedTableName="dash_item"
                                 constraintName="fk_dash_item_id_contact_dash_prop"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"/>
        <!--auto rollback-->

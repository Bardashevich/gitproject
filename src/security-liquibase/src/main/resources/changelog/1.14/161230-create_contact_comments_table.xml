<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="dzmitry.ulezla" id="001">
        <createTable tableName="contact_comment" remarks="Comments added to contact">
            <column autoIncrement="true" name="id" remarks="Comment identifier" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="contact_id" remarks="Contact identifier" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" remarks="Comment author identifier" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="text" remarks="Comment text" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="contact_comment"/>
        </rollback>
    </changeSet>

    <changeSet id="002" author="dzmitry.ulezla">
        <createIndex tableName="contact_comment" indexName="fk_contact_comment_contact_id">
            <column name="contact_id"/>
        </createIndex>
        <rollback>
            <dropIndex tableName="contact_comment" indexName="fk_contact_comment_contact_id"/>
        </rollback>
    </changeSet>

    <changeSet id="003" author="dzmitry.ulezla">
        <addForeignKeyConstraint baseTableName="contact_comment" baseColumnNames="contact_id"
                                 constraintName="fk_contact_comment_id"
                                 referencedTableName="contact"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="contact_comment"
                                      constraintName="fk_contact_comment_id"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
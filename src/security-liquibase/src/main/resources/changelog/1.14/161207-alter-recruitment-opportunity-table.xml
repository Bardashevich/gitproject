<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="01" author="pavel.urban">
        <dropColumn tableName="recruitment_opportunity">
            <column name="working_status"/>
        </dropColumn>
        <!--auto rollback-->
    </changeSet>

    <changeSet id="02" author="pavel.urban">
        <addColumn tableName="recruitment_opportunity">
            <column name="comment" type="VARCHAR(1000)"/>
        </addColumn>
        <!--auto rollback-->
    </changeSet>

    <changeSet id="03" author="pavel.urban">
        <renameColumn tableName="recruitment_opportunity"
                      newColumnName="reason"
                      columnDataType="VARCHAR(1000)"
                      oldColumnName="reason_for_reject"/>
        <!--auto rollback-->
    </changeSet>
</databaseChangeLog>